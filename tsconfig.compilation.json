{
    "compilerOptions": {
        "target": "es5",
        "module": "none",
        "outFile": "dist/pixi-super-atlas.js",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "preserveConstEnums": true,
        "removeComments": true,
        "inlineSources": true,
        "declaration": true
    },
    "include": [
        "compilation.ts"
    ],
    "exclude": [
        "node_modules/**/*",
        "src/**/*",
        "bin"
    ]
}
