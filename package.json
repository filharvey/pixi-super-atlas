{
  "name": "pixi-super-atlas",
  "version": "0.1.0",
  "description": "Runtime atlas for PixiJS v^4",
  "author": "Ivan Popelyshev",
  "contributors": [
    "Ivan Popelyshev <ivan.popelyshev@gmail.com>"
  ],
  "main": "./dist/pixi-projection.js",
  "types": "./dist/pixi-projection.d.ts",
  "homepage": "https://github.com/gameofbombs/pixi-super-atlas",
  "bugs": {
    "url": "https://github.com/gameofbombs/pixi-super-atlas/issues"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/gameofbombs/pixi-super-atlas.git"
  },
  "scripts": {
    "cleanup": "rimraf dist && mkdirp dist",
    "prestart": "yarn cleanup",
    "start": "parallelshell \"yarn watch\"",
    "watch": "tsc -w",
    "prebuild": "yarn cleanup && yarn concat",
    "postbuild": "yarn patch-dts && yarn shx -- rm compilation.ts",
    "build": "tsc -p tsconfig.compilation.json",
    "docs": "jsdoc -c scripts/jsdoc.conf.json -R README.md",
    "patch-dts": "node scripts/patch-dts.js",
    "concat": "node scripts/concat.js",

    "sandbox:vanillajs": "yarn shx -- cp dist/pixi-super-atlas.js sandbox/build/vanillajs/pixi-super-atlas.js && tsc -p sandbox/tsconfig.vanilla.json",
    "sandbox:all": "yarn build && yarn sandbox:vanillajs",
    "sandbox:www": "yarn static-html-server -- -p 9995 -r sandbox/build"
  },
  "files": [
    "dist/",
    "src/",
    "package.json",
    "README.md"
  ],
  "devDependencies": {
    "concat-files": "~0.1.1",
    "del": "~2.2.0",
    "glob": "~7.1.1",
    "jaguarjs-jsdoc": "~1.0.1",
    "jsdoc": "~3.4.0",
    "mkdirp": "~0.5.1",
    "parallelshell": "~2.0.0",
    "rimraf": "~2.5.3",
    "shx": "^0.2.2",
    "typescript": "~2.4.2",
    "static-html-server": "~0.1.2"
  },
  "dependencies": {
    "@types/pixi.js": "^4.5.4"
  }
}
